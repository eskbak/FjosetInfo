{
  "name": "pi-infoscreen",
  "version": "1.0.0",
  "private": true,
  "description": "Raspberry Pi infoscreen â€” AtB 25 + YR today + NRK latest",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev:server": "tsx server.ts",
    "build:server": "tsc -p tsconfig.json",
    "start:server": "node dist/server.js",

    "dev:frontend": "npm run dev --prefix frontend",
    "build:frontend": "npm run build --prefix frontend",
    "preview:frontend": "npm run preview --prefix frontend",

    "dev": "concurrently -k \"npm:dev:server\" \"npm:dev:frontend\"",
    "build": "npm run build:server && npm run build:frontend",
    "start": "concurrently -k \"npm:start:server\" \"npm:preview:frontend\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^24.3.0",
    "concurrently": "^8.2.2",
    "tsx": "^4.19.0",
    "typescript": "^5.9.2"
  }
}
