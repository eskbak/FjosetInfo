{
  "name": "pi-infoscreen",
  "homepage": "https://eskbak.github.io/FjosetInfo",
  "version": "1.0.0",
  "private": true,
  "description": "Raspberry Pi infoscreen â€” AtB 25 + YR today + NRK latest",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev:server": "tsx --tsconfig tsconfig.json server.ts",
    "build:server": "tsc -p tsconfig.json",
    "start:server": "node dist/server.js",
    "dev:frontend": "vite --host",
    "build:frontend": "npm run build --prefix frontend",
    "preview:frontend": "npm run preview --prefix frontend",
    "dev": "concurrently -k \"npm:dev:server\" \"npm:dev:frontend\"",
    "build": "npm run build --prefix frontend",
    "start": "concurrently -k \"npm:start:server\" \"npm:preview:frontend\"",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "yahoo-finance2": "^2.13.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^24.3.0",
    "concurrently": "^8.2.2",
    "gh-pages": "^6.3.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
